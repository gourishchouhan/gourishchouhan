---
// Modern projects section with sample projects
const projects = [
  {
    title: "E-Commerce Platform",
    description: "Full-stack e-commerce application built with React, Node.js, and MongoDB. Features include user authentication, payment integration, and admin dashboard.",
    technologies: ["React", "Node.js", "MongoDB", "Stripe"],
    github: "#",
    live: "#",
    image: "/api/placeholder/400/250"
  },
  {
    title: "Task Management App",
    description: "Collaborative task management tool with real-time updates, drag-and-drop functionality, and team collaboration features.",
    technologies: ["Next.js", "Socket.io", "PostgreSQL", "Tailwind"],
    github: "#",
    live: "#",
    image: "/api/placeholder/400/250"
  },
  {
    title: "Weather Dashboard",
    description: "Interactive weather dashboard with location-based forecasts, data visualization, and responsive design.",
    technologies: ["React", "D3.js", "Weather API", "Chart.js"],
    github: "#",
    live: "#",
    image: "/api/placeholder/400/250"
  }
];
---

<section id="projects" class="section-padding bg-secondary-50 dark:bg-secondary-800 relative">
  <div class="container-custom">
    <!-- Section header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-secondary-900 dark:text-white mb-6">
        Featured <span class="gradient-text">Projects</span>
      </h2>
      <p class="text-lg md:text-xl text-secondary-600 dark:text-secondary-300 max-w-3xl mx-auto text-balance">
        A selection of my recent work showcasing modern technologies, clean design, 
        and user-centered development approaches.
      </p>
    </div>
    
    <!-- Projects grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="card card-hover group animate-on-scroll overflow-hidden" style={`animation-delay: ${index * 200}ms`}>
          <!-- Project image -->
          <div class="relative overflow-hidden bg-secondary-100 dark:bg-secondary-700 h-48">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-accent-500/20"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <svg class="w-16 h-16 text-secondary-400 dark:text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <!-- Overlay with links -->
            <div class="absolute inset-0 bg-secondary-900/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center space-x-4">
              <a 
                href={project.github} 
                class="p-2 bg-white/10 rounded-full hover:bg-white/20 transition-colors duration-200"
                aria-label="View source code"
              >
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a 
                href={project.live} 
                class="p-2 bg-white/10 rounded-full hover:bg-white/20 transition-colors duration-200"
                aria-label="View live demo"
              >
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Project content -->
          <div class="p-6">
            <h3 class="text-xl font-semibold text-secondary-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">
              {project.title}
            </h3>
            <p class="text-secondary-600 dark:text-secondary-300 mb-4 text-sm leading-relaxed">
              {project.description}
            </p>
            
            <!-- Technologies -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class="px-2 py-1 text-xs font-medium bg-primary-100 text-primary-700 dark:bg-primary-900/50 dark:text-primary-300 rounded">
                  {tech}
                </span>
              ))}
            </div>
            
            <!-- Project links -->
            <div class="flex space-x-3">
              <a 
                href={project.github} 
                class="flex-1 btn-ghost text-sm justify-center"
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Code
              </a>
              <a 
                href={project.live} 
                class="flex-1 btn-primary text-sm justify-center"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Demo
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View more projects CTA -->
    <div class="text-center mt-12 animate-on-scroll">
      <a 
        href="#contact" 
        class="btn-secondary group"
      >
        View More Projects
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
</section>
