---
// Modern header component with centered oval navbar
---

<header class="fixed top-0 left-0 right-0 z-40 transition-all duration-300">
  <!-- Top section with logo and theme toggle -->
  <div class="glass-effect border-b border-gray-200/20 dark:border-gray-800/20">
    <div class="container-custom">
      <div class="flex items-center justify-between h-16">
        <!-- Logo/Brand -->
        <a 
          href="#hero" 
          class="text-xl font-semibold gradient-text hover:scale-105 transition-transform duration-300"
        >
          Gourish Chouhan
        </a>
        
        <!-- Mobile menu button -->
        <button 
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg hover:bg-secondary-100 dark:hover:bg-gray-800 transition-colors duration-200"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Centered oval navigation -->
  <div class="flex justify-center pt-4 pb-2">
    <nav class="hidden md:block bg-white/10 dark:bg-black/20 backdrop-blur-lg rounded-full border border-white/20 dark:border-gray-700/30 shadow-lg px-8 py-3">
      <ul class="flex items-center space-x-8">
        <li>
          <a 
            href="#about" 
            class="nav-link text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200"
          >
            About
          </a>
        </li>
        <li>
          <a 
            href="#projects" 
            class="nav-link text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200"
          >
            Projects
          </a>
        </li>
        <li>
          <a 
            href="#skills" 
            class="nav-link text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200"
          >
            Skills
          </a>
        </li>
        <li>
          <a 
            href="#contact" 
            class="bg-black dark:bg-white text-white dark:text-black px-6 py-2 rounded-full hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-200 font-medium"
          >
            Contact
          </a>
        </li>
      </ul>
    </nav>
  </div>
    
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden glass-effect border-t border-gray-200/20 dark:border-gray-800/20">
    <div class="container-custom pb-4 pt-2">
      <div class="flex flex-col space-y-3">
        <a 
          href="#about" 
          class="block py-2 text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200"
        >
          About
        </a>
        <a 
          href="#projects" 
          class="block py-2 text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200"
        >
          Projects
        </a>
        <a 
          href="#skills" 
          class="block py-2 text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200"
        >
          Skills
        </a>
        <a 
          href="#contact" 
          class="inline-flex bg-black dark:bg-white text-white dark:text-black px-6 py-2 rounded-full hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-200 font-medium w-fit"
        >
          Contact
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
  
  // Add scroll effect to header
  let lastScrollY = window.scrollY;
  
  window.addEventListener('scroll', () => {
    const header = document.querySelector('header');
    const currentScrollY = window.scrollY;
    
    if (header) {
      if (currentScrollY > 100) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    }
    
    lastScrollY = currentScrollY;
  });
</script>

<style>
  .nav-link {
    position: relative;
    padding: 0.5rem 0;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, theme('colors.gray.800'), theme('colors.black'));
    transition: width 0.3s ease;
  }
  
  .dark .nav-link::after {
    background: linear-gradient(90deg, theme('colors.gray.400'), theme('colors.white'));
  }
  
  .nav-link:hover::after {
    width: 80%;
  }
  
  header.scrolled {
    backdrop-filter: blur(20px);
    box-shadow: 0 4px 25px -5px rgba(0, 0, 0, 0.1);
  }
  
  header.scrolled .glass-effect {
    background: rgba(255, 255, 255, 0.8);
  }
  
  .dark header.scrolled .glass-effect {
    background: rgba(0, 0, 0, 0.8);
  }
</style>
